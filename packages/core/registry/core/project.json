{
  "name": "@owl-app/registry",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/core/registry/core/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
			"inputs": ["default", "^production"],
			"outputs": ["{workspaceRoot}/dist/packages/core/registry/core"],
      "options": {
        "commands": [
          "npx rimraf dist/packages/core/registry/core",
          "npx tsc -p packages/core/registry/core/tsconfig.build.json",
          "npx copyfiles -f \"packages/core/registry/core/package.json\" \"packages/core/registry/core/README.md\" \"LICENSE\" dist/packages/core/registry/core"
        ],
        "cwd": ".",
        "parallel": false
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "npx copyfiles -f \"dist/packages/core/registry/core/src/*\" dist/packages/core/registry/core/dist",
            "forwardAllArgs": false
          },
          {
            "command": "npx rimraf dist/packages/core/registry/core/src",
            "forwardAllArgs": false
          },
          "node tools/scripts/publish.mjs @owl-app/registry {args.ver} {args.tag}"
        ],
        "cwd": ".",
        "parallel": false,
        "packageDir": "{workspaceRoot}/dist/packages/core/registry/core/"
      },
      "dependsOn": ["build"]
    }
  },
  "tags": []
}
