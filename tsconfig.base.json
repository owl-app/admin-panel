{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "sourceMap": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "@owl-app/lib-api-core": ["libs/api/core/src/index.ts"],
      "@owl-app/registry": ["packages/common/registry/src/index.ts"],
      "@owl-app/registry-nestjs": [
        "packages/server/registry-nestjs/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
